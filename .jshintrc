{
  "curly": false,    // Require {} for every new block or scope
  "eqeqeq": false,   // Require triple equals (===) for comparison
  "immed": false,    // Require immediate invocations to be wrapped in parens e.g. `(function () { } ());`
  "latedef": false,  // Require variables/functions to be defined before being used
  "newcap": false,   // Require capitalization of all constructor functions e.g. `new F()`
  "noarg": false,    // Prohibit use of `arguments.caller` and `arguments.callee`
  "sub": false,      // Tolerate using `[]` notation when it can still be expressed in dot notation
  "undef": false,     // Require all non-global variables to be declared (prevents global leaks)
  "boss": false,     // Tolerate assignments where comparisons would be expected
  "eqnull": false,   // Tolerate use of `== null`
  "browser": true,   // We're in the browser
  "es3": true       // Adhere to the ECMAscript 3 spec
}